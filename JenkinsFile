pipeline{
    agent any
    options {
        timestamps()
        disableConcurrentBuilds()
        timeout(time: 10, unit: 'MINUTES')
        buildDiscarder(logRotator(numToKeepStr: '20'))
    }
    environment {
        IMAGE = "registry.company.com/python-service:${env.GIT_COMMIT}"
    }
    stages{
        stage('checkout'){
            steps{
                checkout scm
            }
        }
        stage('Lint') {
            steps{
                bat 'pip install flake8'
                
                bat 'flake8 . --max-line-length=120'
            }
        }
        stage('security scan') {
            steps{
                bat 'pip install bandit safety'
                bat 'bandit -r .'
                bat 'safety check -r requirements.txt --full-report'
            }
        }
    }   
}